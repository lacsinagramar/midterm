
extends ../../../templates/master.pug

block content
    - var postName = [];
    - var authorName =[];
    - var date = [];
    - var postID =[];
    each content in contentForPug
        - postName = content.postSubject;
        - authorName = content.author;
        - date = content.postDate;
        - postID = content.postID;
    h1.title #{postName}
    h3.subtitle by #{authorName} on #{date}
    br
    each content in contentForPug
        form(method='post' action=`/post/edited`)
            input(type='hidden' name='id' value=content.postID)
            textarea(name='postcontent' rows='5' cols='100') #{content.postContent}
            br
            br
            br
            button(type='submit' class='button is-success is-focused')
                span.icon
                    i.fa.fa-check
                span Done   