extends ../../../templates/base

block body
    - var hasIncorrect = typeof incorrect !== 'undefined' ? 'Incorrect username or password.' : ''
    - var hasUnauthorized = typeof unauthorized !== 'undefined' ? 'You are not authorized to view the page you\'re trying to access. Please log in first.' : ''
    - var userExists = typeof usernameExists !== 'undefined' ? 'Username already exists' : ''
    - var hasSuccess = typeof success !== 'undefined' ? 'You have successfuly signed up. Please login' : ''
    section.hero.is-dark.is-bold
        .hero-body
            if hasIncorrect || hasUnauthorized || userExists
                .notification.is-danger
                    | #{hasIncorrect || hasUnauthorized || userExists}
            else if hasSuccess
                .notification.is-success
                    | #{hasSuccess}
            .columns
                .column.is-7
                    .container
                        h1.title ExBPlate
                        h2.subtitle The Official CCIS ExpressJS Boilerplate

                .column
                    form(method="POST" action="/login")
                        .field.is-horizontal
                            .field-label.is-normal
                                label.label.has-text-white E-mail
                            .field-body
                                .field
                                    p.control.is-expanded
                                        input.input(type="email" name="email" placeholder="john.doe@xyz.com")
                        
                        .field.is-horizontal
                            .field-label.is-normal
                                label.label.has-text-white Password
                            .field-body
                                .field
                                    p.control.is-expanded
                                        input.input(type="password" name="password")
                        
                        input.button.is-primary.is-pulled-right(type="submit" value="Log-in")
    section.hero.is-primary.is-bold
        .hero-body
            .columns
                .column.is-7
                    .container
                        h1.title Don't Have an Account?
                        h2.subtitle Signup Here
                .column
                    form(method="post" action="/signup")
                        .field.is-horizontal
                                .field-label.is-normal
                                    label.label.has-text-white E-mail
                                .field-body
                                    .field
                                        p.control.is-expanded
                                            input.input(type="email" name="email" placeholder="Your email")
                        .field.is-horizontal
                                .field-label.is-normal
                                    label.label.has-text-white Username
                                .field-body
                                    .field
                                        p.control.is-expanded
                                            input.input(type="text" name="username" placeholder="Pick a Username")
                        .field.is-horizontal
                            .field-label.is-normal
                                label.label.has-text-white Birthday
                            .field-body
                                .field
                                    p.control.is-expanded
                                        input.input(type="date" name="birthday")
                        .field.is-horizontal
                            .field-label.is-normal
                                label.label.has-text-white Password
                            .field-body
                                .field
                                    p.control.is-expanded
                                        input.input(type="password" name="password")
                            
                        input.button.is-info.is-pulled-right(type="submit" value="Signup")